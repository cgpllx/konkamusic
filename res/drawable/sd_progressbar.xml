<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0.0dip" />
            <gradient
                android:angle="270.0"
                android:centerColor="@color/grey2"
                android:centerY="0.5"
                android:endColor="@color/grey2"
                android:startColor="@color/grey2" /> <!-- wangxu-common_gray -->
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0.0dip" />

                <gradient
                    android:angle="270.0"
                    android:centerColor="@color/grey3"
                    android:centerY="0.75"
                    android:endColor="@color/grey3"
                    android:startColor="@color/grey3" /> <!-- wangxu-common_depth_gray -->
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0.0dip" />

                <gradient
                    android:angle="270.0"
                    android:centerColor="@color/common_blue"
                    android:centerY="0.75"
                    android:endColor="@color/common_blue"
                    android:startColor="@color/common_blue" />
            </shape>
        </clip>
    </item>

</layer-list>