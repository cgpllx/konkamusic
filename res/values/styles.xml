<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="Kugou.Widget.Search.EditText.New" parent="@android:style/Widget.EditText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/main_edittext_tint_color</item>
        <item name="android:background">@drawable/search_result_edit_new</item>
        <item name="android:paddingLeft">@dimen/edittextpaddingLeft</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Kugou.Widget.GridView" parent="@android:style/Widget.GridView">
        <item name="android:listSelector">@drawable/grid_selector_bg</item>
    </style>

    <style name="Kugou.Widget.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/max_text_color</item>
        <item name="android:button">@drawable/btn_check</item>
    </style>

    <style name="Kugou.Widget.ListView" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/btn_default_bg</item>
        <item name="android:cacheColorHint">@color/cacheColorHint</item>
        <item name="android:divider">@color/listDivider</item>
        <item name="android:dividerHeight">0.0px</item>
    </style>

    <style name="KugouNotificationBigText">
        <item name="android:textSize">17.0dip</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="KugouNotificationText">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Kugou.Widget.SecondTab.RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/secondTab</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawableTop">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>
   <style name="Kugou.Widget.Search.EditText" parent="@android:style/Widget.EditText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/main_edittext_tint_color</item>
        <item name="android:background">@drawable/search_result_edit</item>
        <item name="android:paddingLeft">@dimen/edittextpaddingLeft</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>
        <style name="Kugou.Widget.Button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:minHeight">40.0dip</item>
    </style>
       <style name="KugouNotificationTitle">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
</resources>