<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/navigation_localentry_fav"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_viewgroup_button"
            android:minHeight="@dimen/navigation_localentry_height" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:duplicateParentState="true"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/navigation_localentry_fav_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:scaleType="center"
                    android:src="@drawable/btn_navigation_localentry_fav" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:duplicateParentState="true"
                    android:text="@string/navigation_my_fav"
                    android:textColor="@color/navigation_primary_text"
                    android:textSize="@dimen/textMediumSize" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/navigation_localentry_playlist"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:visibility="gone"
            android:background="@drawable/bg_viewgroup_button"
            android:minHeight="@dimen/navigation_localentry_height" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:duplicateParentState="true"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/navigation_localentry_playlist_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:scaleType="center"
                    android:src="@drawable/btn_navigation_localentry_playlist" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:duplicateParentState="true"
                    android:text="@string/navigation_my_playlist"
                    android:textColor="@color/navigation_primary_text"
                    android:textSize="@dimen/textMediumSize" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/navigation_localentry_download"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/bg_viewgroup_button"
            android:minHeight="@dimen/navigation_localentry_height" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:duplicateParentState="true"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:scaleType="center"
                    android:src="@drawable/btn_navigation_localentry_download" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:duplicateParentState="true"
                    android:text="@string/navigation_download_management"
                    android:textColor="@color/navigation_primary_text"
                    android:textSize="@dimen/textMediumSize" />
            </LinearLayout>

            <View
                android:id="@+id/id_bubble_count_anchor"
                android:layout_width="0.0dip"
                android:layout_height="0.0dip"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/download_bubble_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_toRightOf="@id/id_bubble_count_anchor"
                android:background="@drawable/img_navigation_bubble"
                android:ellipsize="end"
                android:gravity="center"
                android:visibility="gone"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/textMinSize" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/navigation_localentry_history"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/bg_viewgroup_button"
            android:minHeight="@dimen/navigation_localentry_height" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:duplicateParentState="true"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:scaleType="center"
                    android:src="@drawable/btn_navigation_localentry_history" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:duplicateParentState="true"
                    android:text="@string/navigation_history"
                    android:textColor="@color/navigation_primary_text"
                    android:textSize="@dimen/textMediumSize" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>