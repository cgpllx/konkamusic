<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/player_queue_list_height"
    android:background="@drawable/bg_common_title_bar_btn"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/index"
        android:layout_width="@dimen/player_queue_list_height"
        android:layout_height="@dimen/player_queue_list_height"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/player_queue_secondary_text_color"
        android:textSize="@dimen/textMediumSize" />

    <com.konka.music.ui.widget.KGImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/player_queue_list_height"
        android:layout_height="@dimen/player_queue_list_height"
        android:scaleType="center" />

    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/player_queue_list_height"
        android:layout_toRightOf="@id/index"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="@dimen/textMediumSize" />

</RelativeLayout>